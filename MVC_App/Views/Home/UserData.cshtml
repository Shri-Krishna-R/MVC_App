<h1 style="text-align:center ">Post Data from JSON placeholder</h1>

<script>
    function getuserdata() 
    {
        var url = "https://jsonplaceholder.typicode.com/users";
        fetch(url).then(response => response.json()).
            then
            (
                responseData =>
                {
                console.log(responseData);
                //write code to assign data to table
                // alert    ("success: Got the data");
                for (var i=0; i<responseData.length; i++) 
                {
                    $("#parentDiv").append
                    (
                        "<div>" +
                        "<h1>" + responseData[i].username + "/<h1>"
                        + "</div>"
                    )

                }


            }
            ).catch(err => console.log(err));
    }

    
</script>

<button class="btn btn-primary" onclick="getuserdata()">Show user</button>

